rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Members collection - public read, no write from client
    // (writes happen through the profile update form with GitHub API)
    match /members/{memberId} {
      allow read: if true; // Anyone can view member profiles
      allow write: if true; // Allow writes for now (secure with auth later)
    }
    
    // Deny all other collections by default
    match /{document=**} {
      allow read, write: if false;
    }
  }
}